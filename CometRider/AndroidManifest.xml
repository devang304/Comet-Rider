<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cometrider"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.cometrider.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.cometrider.DisplayMapActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.cometrider.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cometrider.MainActivity" />
        </activity>
        <activity
            android:name="com.example.cometrider.ReminderActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.cometrider.TabsWithSwipe" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cometrider.TabsWithSwipe" />
        </activity>
        <activity
            android:name="com.example.cometrider.ScheduleActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.cometrider.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cometrider.MainActivity" />
        </activity>
        <activity
            android:name="com.example.cometrider.DisplayTwitterActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.cometrider.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cometrider.MainActivity" />
        </activity>
        <activity
            android:name="com.example.cometrider.TabsWithSwipe"
            android:label="@string/app_name"
            android:parentActivityName="com.example.cometrider.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cometrider.MainActivity" />
        </activity>
        <activity
            android:name="com.example.cometrider.ReminderList"
            android:label="@string/app_name"
            android:parentActivityName="com.example.cometrider.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cometrider.MainActivity" />
        </activity>
        <activity
            android:name="com.example.cometrider.ReminderTrigger"
            android:label="@string/app_name"
             >
           
        </activity>
    </application>

</manifest>
